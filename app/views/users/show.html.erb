<div class="container">
  <!-- Page Content goes here -->
  <% @articles.each do |article| %>
    <div class="row">
      <div class="col s12 m3">
      </div>
      <div class="col s12 m6">
        <div class="card blue lighten-5">
          <div class="card-content black-text">
            <span class="card-title"><%= article.user.name %></span>
            <p><%= article.text %></p>
          </div>
          <div class="card-action">
            <a><%= link_to "Show", blog_path(article), method: :get %></a>
            <% if user_signed_in? && current_user.id == article.user_id %>
              <a><%= link_to "Edit", edit_blog_path(article), method: :get %></a>
              <a><%= link_to "Delete", blog_path(article), method: :delete %></a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row">
    <div class="col s12 m6">
    </div>
    <div class="col s12 m6">
      <% if User.find(params[:id]).id == current_user.id %>
        <%= link_to 'ユーザー情報の変更', edit_user_registration_path %>
      <% end %>
    </div>
  </div>
</div>
