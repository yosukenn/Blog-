<div class="container">
  <!-- Page Content goes here -->
  <div class="row">
    <%= form_for @article, url: blogs_path, html: {class: "col s12"} do |f| %>
      <div class="row">
        <div class="col s12 m3">
        </div>
        <div class="input-field col s12 m6">
          <%= f.label :text %>
          <%= f.text_area :text, id: 'textarea1', class: 'materialize-textarea', maxlength: '120' %>
        </div>
      </div>
      <div class="col s12 m3">
      </div>
      <div class="input-field col s12 m6">
        <%=f.submit id: 'submit', value: '投稿' %>
        <label for="submit"></label>
      </div>
    </form>
    <% end %>
  </div>
</div>
